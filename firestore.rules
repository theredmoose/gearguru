rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Family members collection
    match /familyMembers/{memberId} {
      // Allow read/write for authenticated users only
      // For MVP: Allow all access (update this for production)
      allow read, write: if true;

      // Production rule (uncomment when auth is implemented):
      // allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Gear items collection
    match /gearItems/{itemId} {
      // Allow read/write for authenticated users only
      // For MVP: Allow all access (update this for production)
      allow read, write: if true;

      // Production rule (uncomment when auth is implemented):
      // allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
